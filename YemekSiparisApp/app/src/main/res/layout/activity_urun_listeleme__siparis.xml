<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui_musteri.SiparisVerActivity.UrunListelemeActivity_Siparis">
    <TextView
        android:text="Yiyecekler"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/textColor"
        android:layout_column="0"
        android:layout_row="0"
        android:textSize="18sp"
        />
    <TextView
        android:background="@color/colorPrimaryDark"
        android:layout_column="1"
        android:layout_row="0"
        android:textSize="18sp"
        android:text="         "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:background="@color/alternativeColor"
        android:textColor="@color/textColor"
        android:text="Fiyat"

        android:textSize="18sp"
        android:layout_row="0"
        android:layout_column="2"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/urunler_musteri_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="0"/>

    <Button
        android:background="@color/alternativeColor"
        android:textColor="@color/textColor"
        android:layout_height="wrap_content"
        android:layout_width="207dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_gravity="bottom"

        android:text="Seçimleri Sıfırla"/>

    <Button
    android:background="@android:color/holo_red_light"
    android:textColor="@color/textColor"
    android:layout_height="wrap_content"
    android:layout_width="211dp"
    android:layout_row="2"
        android:layout_columnSpan="2"
    android:layout_column="1"
    android:text="Sepet"
        android:onClick="sepeteGit"
        android:layout_gravity="bottom"/>

</GridLayout>